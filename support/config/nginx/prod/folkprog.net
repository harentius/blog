proxy_cache_path /home/deploy/projects/folkprog.net/web/assets/images/preview levels=1:2 keys_zone=img_resize:10m inactive=24h max_size=5G;

server {
    listen localhost:8083;

    location ~ ^\/assets\/images\/preview\/(?<name>[^\/]*?)(_(?<width>(\d+|-))x(?<height>(\d+|-)))?(\.(?<extension>[0-9a-z]+))$ {
        alias /home/deploy/projects/folkprog.net/web/assets/images/$name.$extension;
        image_filter resize $width $height;
    }
}

server {
    listen 80;
    server_name www.folkprog.net;

    return 301 $scheme://folkprog.net$request_uri;
}

server {
    listen 80;
    server_name folkprog.net;
    root /var/www/folkprog.net;

    location / {
        client_max_body_size 80m;
        # try to serve file directly, fallback to rewrite
        try_files $uri @rewriteapp;
    }

    location @rewriteapp {
        # rewrite all to app.php
        rewrite ^(.*)$ /app.php/$1 last;
    }

    location ~ ^/app\.php(/|$) {
        client_max_body_size 80m;
        fastcgi_pass unix:/var/run/php5-fpm.sock;
        fastcgi_split_path_info ^(.+\.php)(/.*)$;
        include fastcgi_params;
        fastcgi_param SCRIPT_FILENAME $realpath_root$fastcgi_script_name;
        fastcgi_param DOCUMENT_ROOT $realpath_root;
    }

    location ~ ^/(bundles|css|js|img)/ {
        access_log off;
        expires 30d;
        try_files $uri @rewriteapp;
    }

    location ~ ^/assets/ {
        access_log off;
        expires 30d;
        try_files $uri @rewriteapp;

        location ~ ^/assets/images/preview/ {
            proxy_pass http://localhost:8083;
            proxy_cache img_resize;
            proxy_cache_valid  200      24h;
            proxy_cache_valid  404 415  1m;
        }
    }

    location ~ /\.ht {
        deny all;
    }

    access_log /var/log/nginx/folkprog.net.access.log;
    error_log  /var/log/nginx/folkprog.net.error.log;
}
