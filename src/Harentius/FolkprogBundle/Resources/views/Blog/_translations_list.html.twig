<div class="languages-wrapper pull-right">
    {% set translations = translations_list(entity) %}
    {% set currentLocale = app.request.locale %}

    {% if translations|length > 1 %}
        {% for locale in translations %}
            {% if currentLocale == locale %}
                <span>{{ locale }}</span>
            {% else %}
                {% if locale == default_locale %}
                    <a href="{{ path('harentius_blog_show', {'slug': entity.slug}) }}">{{ locale }}</a>
                {% else %}
                    <a href="{{ path('harentius_blog_show_' ~ locale, {'slug': entity.slug, '_locale': locale}) }}">{{ locale }}</a>
                {% endif %}
            {% endif %}
        {% endfor %}
    {% endif %}
</div>
