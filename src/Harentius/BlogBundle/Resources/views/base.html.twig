<!DOCTYPE html>
<html>
    <head>
        <title>{% block page_title -%}ADD - Avis De Décès{%- endblock %}</title>
        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
        <meta name="viewport" content="width=device-width" />

        {% block common_stylesheets %}
            {% stylesheets
            'assets/vendor/bootstrap/dist/css/bootstrap.min.css'
            %}
            <link href="{{ asset_url }}" media="all" rel="stylesheet" type="text/css" />
            {% endstylesheets %}
        {% endblock %}

        {% block stylesheets %}{% endblock %}
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <link rel="apple-touch-icon" href="{{ asset('apple-touch-icon.png') }}" />
        {% block head_extra %}{% endblock %}

    </head>

    <body>
        <div class="container">
            <div class="col-lg-9">
                {% block content %}{% endblock %}
            </div>

            <div class="col-lg-3">
                {% block sidebar %}
                    {{ render(controller('HarentiusBlogBundle:Sidebar:index')) }}
                {% endblock %}
            </div>
        </div>

    {% block common_javascripts %}
        {% javascripts
        'assets/vendor/bootstrap/dist/js/bootstrap.min.js'
        %}
        <script src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {% block javascripts %}{% endblock %}
    </body>
</html>
