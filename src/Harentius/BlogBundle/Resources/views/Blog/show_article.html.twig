{% extends 'HarentiusBlogBundle:Blog:show_page.html.twig' %}

{% block after_post_content%}
    {% include 'HarentiusBlogBundle:Blog:_post_info.html.twig' with {'article': entity} %}
    <div class="row social-wrapper" data-id="{{ entity.id }}">
        <div class="pull-left text-right col-lg-6 col-md-6 col-xs-12">
            {# TODO: social icons #}
        </div>

        <div class="pull-right text-right col-lg-6 col-md-6 col-xs-12 likes-wrapper">
            <span class="like">
                <i
                    class="{% if is_article_liked(entity) %}fa-thumbs-up{% else %}fa-thumbs-o-up{% endif %}{% if(is_article_rated(entity)) %} disabled{% endif %}"
                    id="like-action"
                >
                </i>
                <span class="value">{{ entity.likesCount }}</span>
            </span>

            <span class="dislike">
                <i
                    class="{% if is_article_disliked(entity) %}fa-thumbs-down{% else %}fa-thumbs-o-down{% endif %}{% if(is_article_rated(entity)) %} disabled{% endif %}"
                    id="dislike-action"
                >
                </i>
                <span class="value">{{ entity.disLikesCount }}</span>
            </span>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', {'callback': 'fos.Router.setData'}) }}"></script>
{% endblock javascripts %}

{% block stylesheets %}
    {% stylesheets
        'assets/vendor/components-font-awesome/css/font-awesome.min.css'
    %}
    <link href="{{ asset_url }}" media="all" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}
