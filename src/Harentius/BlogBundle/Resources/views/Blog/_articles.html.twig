{% for article in articles %}
<div class="padded-content post-preview-wrapper">
    <article>
        <h2><a href="{{ path('blog_show', {'slug': article.slug}) }}">{{ article.title }}</a></h2>
        <div>{{ article.text|read_more }}</div>
    </article>
    {% include 'HarentiusBlogBundle:Blog:_post_info.html.twig' %}
</div>
{% endfor %}
