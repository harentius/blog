{% extends '@!HarentiusBlog/Show/article.html.twig' %}

{% block post_rating_left %}
    <div class="sharethis-inline-share-buttons"></div>
{% endblock %}

{% block after_post_ratings_row %}
    <div class="fb-comments" data-width="100%" data-numposts="5"></div>
    <div id="fb-root"></div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v5.0"></script>
    <script type="text/javascript" src="//platform-api.sharethis.com/js/sharethis.js#property={{ sharethis_property }}&product={{ sharethis_product }}"></script>
{% endblock javascripts %}

{% block head_extra %}
    {{ parent() }}
    <meta property="fb:app_id" content="{{ facebook_app_id }}"/>
{% endblock %}
