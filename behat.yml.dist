default:
    formatters:
        pretty:
            paths: false
    autoload:
        '': '%paths.base%//vendor/harentius/blog-bundle/tests/features/bootstrap'
    suites:
        main:
            mink_session: selenium2
            paths:
                - '/vendor/harentius/blog-bundle/tests/features/'
            contexts:
                - MinkContext
                - AuthContext
                - BackUpContext:
                    - '%paths.base%'

    extensions:
        Behat\MinkExtension:
            default_session: selenium2
            browser_name: chrome
            base_url: 'http://nginx/app_test.php'
            selenium2:
                wd_host: 'http://selenium:4444/wd/hub'
                capabilities:
                    extra_capabilities:
                        chromeOptions:
                            args:
                                - "--window-size=1980,1080"
